#include <bits/stdc++.h>

using namespace std;

// Complete the staircase function below.
void staircase(int n) {

for(int i=0;i<n;i++)

{
 int z=0;
 for(int k=i;k<n-1;k++)
 {

   cout<<" ";
  z++;
 }

for(int j=n-z;j>0;j--)
    {
       
        cout<<"#";
    }
   cout<<"\n";

 

}

}

int main()
{
    int n;
    cin >> n;
    //cin.ignore(numeric_limits<streamsize>::max(), '\n');

    staircase(n);

    return 0;
}
